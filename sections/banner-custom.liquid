<section class="banner-section">
  <div class="banner-bar">
    <div class="brand" style="border:2px solid #e94b4b;">{{ section.settings.brand }}</div>
    <div class="subtitle" style="border:2px solid #e94b4b;">{{ section.settings.subtitle }}</div>
    <a href="{{ section.settings.button_link }}" class="choose-gift-btn" style="background:#ffd800; border:2px solid #e94b4b;">
      {{ section.settings.button_label }} →
    </a>
  </div>
  <div class="banner-center">
    <h1 style="border:2px solid #e94b4b;">{{ section.settings.heading }}</h1>
    <p style="border:2px solid #e94b4b;">{{ section.settings.description }}</p>
    <a href="{{ section.settings.shop_link }}" class="shop-btn">
      {{ section.settings.shop_label }} →
    </a>
  </div>
  <div class="banner-footer">
    <span style="border:2px solid #e94b4b;">{{ section.settings.footer }}</span>
  </div>
</section>

{% schema %}
{
  "name": "Pixel Perfect Banner",
  "settings": [
    { "type": "text", "id": "brand", "label": "Brand", "default": "TISSO VISON" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Find the ideal gift for your loved ones." },
    { "type": "url",  "id": "button_link", "label": "Choose Gift Link" },
    { "type": "text", "id": "button_label", "label": "Choose Gift Button Text", "default": "CHOOSE GIFT" },
    { "type": "text", "id": "heading", "label": "Main Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination..." },
    { "type": "url",  "id": "shop_link", "label": "Shop Link" },
    { "type": "text", "id": "shop_label", "label": "Shop Button Text", "default": "SHOP NOW" },
    { "type": "text", "id": "footer", "label": "Footer Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ]
}
{% endschema %}
