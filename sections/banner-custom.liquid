{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "logo", "label": "Logo text", "default": "TISSO VISON" },
    { "type": "text", "id": "tagline", "label": "Tagline", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "CTA Button Text", "default": "CHOOSE GIFT →" },
    { "type": "text", "id": "headline", "label": "Main Headline", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Banner Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "shop_btn_text", "label": "Shop Now Button Text", "default": "SHOP NOW →" },
    { "type": "text", "id": "bottom_bar", "label": "Bottom Bar Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ]
}
{% endschema %}

<div class="custom-banner">
  <div class="banner-header">
    <span class="logo">{{ section.settings.logo }}</span>
    <span class="tagline">{{ section.settings.tagline }}</span>
    <button class="choose-gift-btn banner-anim-btn">{{ section.settings.button_text }}</button>
  </div>
  <div class="banner-bg-graphic"></div><!-- Your SVG or background here -->
  <div class="banner-content">
    <h1 class="banner-headline">{{ section.settings.headline }}</h1>
    <div class="banner-desc">{{ section.settings.description }}</div>
    <button class="shop-now-btn banner-anim-btn">{{ section.settings.shop_btn_text }}</button>
  </div>
  <div class="banner-bottom-bar">{{ section.settings.bottom_bar }}</div>
</div>

<link rel="stylesheet" href="{{ 'custom-style.css' | asset_url }}">
