<section class="grid-section">
  <h2>{{ section.settings.grid_title }}</h2>
  <div class="product-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      <div class="product-cell">
        <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
        <button class="plus-btn" data-product-id="{{ product.id }}">+</button>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    { "type": "text", "id": "grid_title", "label": "Grid Title", "default": "Tisso vison in the wild" }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select Product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{"name": "Custom Product Grid", "blocks": [{"type":"product"},{"type":"product"},{"type":"product"},{"type":"product"},{"type":"product"},{"type":"product"}]}]
}
{% endschema %}
