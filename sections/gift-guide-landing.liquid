<script>
  // Modal handling with dynamic loading
  const modalOverlay = document.getElementById('modalOverlay');
  const modalContent = document.getElementById('modalContent');
  const imageOverlays = document.querySelectorAll('.image-overlay');

  imageOverlays.forEach((overlay) => {
    overlay.addEventListener('click', () => {
      const filePath = overlay.getAttribute('data-card-file');
      if (filePath) {
        fetch(filePath)
          .then((response) => {
            if (!response.ok) throw new Error('File not found: ' + filePath);
            return response.text();
          })
          .then((data) => {
            modalContent.innerHTML = data; // Load external HTML
            modalOverlay.classList.add('active');

            // Attach close listener to the loaded close button
            const closeBtn = modalContent.querySelector('.close-button');
            if (closeBtn) {
              closeBtn.addEventListener('click', closeModal);
            } else {
              console.warn('Close button not found in loaded content');
            }

            // Execute any scripts in loaded content
            const scripts = modalContent.getElementsByTagName('script');
            for (let script of scripts) {
              eval(script.innerText); // Run scripts (use cautiously)
            }
          })
          .catch((error) => console.error('Error loading card:', error));
      } else {
        console.error('No data-card-file attribute on overlay');
      }
    });
  });

  // Close function
  function closeModal() {
    modalOverlay.classList.remove('active');
    modalContent.innerHTML = ''; // Clear for next load
  }

  // Close on overlay click (outside card)
  modalOverlay.addEventListener('click', (e) => {
    if (e.target === modalOverlay) {
      closeModal();
    }
  });

  // Close on Esc key
  window.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeModal();
    }
  });
</script>
